---
import FeatureTable from "../components/feature_table.astro";

import plans from "../../plans.json";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Laurentius Plus</title>
	</head>
	<body>
		<div class="min-w-full min-h-screen flex items-center justify-center">
			<div
				style={{ width: "min(max(800px, 70%), 100%)" }}
				class="overflow-x-scroll"
			>
				<FeatureTable plans={plans} />
			</div>
		</div>
	</body>
</html>
